<h1>My Tasks</h1>


<ul style="list-style-type: none;">
  <% @tasks.each do |task| %>
    <li >
    <% if task.completed == true %>
    <i class="fa-regular fa-square-check"></i>
    <% else %>
    <i class="fa-regular fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to task_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} do %>
          <i class="fa-regular fa-trash-can"></i>
        <% end %>
    </li>

  <% end %>
</ul>

<i class="fa-sharp fa-solid fa-plus"></i><%= link_to "New task", new_task_path  %>
